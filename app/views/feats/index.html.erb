<section id="stats" class="clearfix">
    <h2><%= @person.name %></h2>
    <img class="avatar" src="<%= @person.avatar_url_or_fallback %>" alt="Martins avatar" />
    <div id="xp_meter"><span>XP: <%= @person.xp %>/<%= @person.next_level %></span></div>
    <p id="loot">Loot: 1 mån, 3 dagar</p>
</section>
<section id="feats">
    <header>
        <h2><time>Ons 17 nov</time></h2>
        <nav class="clearfix">
            <ul>
                <li class="previous"><a href="?date=2010-11-16"><time>16 nov</time></a></li>
                <li class="next"><a href="?date=2010-11-18"><time>18 nov</time></a></li>
            <ul>
        </nav>
    </header>
    <ol>
        <% @feats.each do |feat| %>
        <li><a class="feat<%= " completed" if feat.completed? %>" src="#" data-id="<%= feat.id %>" data-completed="<%= feat.completed %>" /><%= feat.activity.title %></a></li>
        <% end %>
    </ol>
    <div>
        <%= button_to('Lägg till ny', new_person_feat_path(@person), :method => :get) %>
    </div>
</section>