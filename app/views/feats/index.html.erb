<header>
    <h1>Epic life</h1>
</header>
<section id="stats">
    <%= @person.name %>
    <img class="avatar" src="<%= @person.avatar_url_or_fallback %>" alt="Martins avatar" />
    <div id="xp_meter"><span>XP: <%= @person.xp %>/<%= @person.next_level %></span></div>
    <p id="loot">Loot: 1 mån, 3 dagar</p>
</section>
<section id="feats">
    <header>
        <h2>Ons 17 nov</h2>
        <nav>
            <ul>
                <li><a href="?date=2010-11-16">16 nov</a></li>
                <li><a href="?date=2010-11-18">18 nov</a></li>
            <ul>
        </nav>
    </header>
    <ol>
        <% @feats.each do |feat| %>
        <li><input class="feat" type="button" value="<%= feat.activity.title %>" data-id="<%= feat.id %>" data-completed="<%= feat.completed %>" /></li>
        <% end %>
    </ol>
    <div>
        <%= button_to('Lägg till ny', new_person_feat_path(@person), :method => :get) %>
    </div>
</section>