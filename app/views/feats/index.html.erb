<section id="stats" class="clearfix">
    <h2><%= @person.name %></h2>
    <img class="avatar" src="<%= @person.avatar_url_or_fallback %>" alt="Martins avatar" />
    <div id="xp_meter"><span>XP: <%= @person.xp %>/<%= @person.next_level %></span></div>
    <p id="loot">Loot: 1 mån, 3 dagar</p>
</section>
<section id="feats">
    <header>
        <h2><time><%= @date.to_s(:short) %></time></h2>
        <nav class="clearfix">
            <ul>
                <li class="previous"><a href="?date=<%= (@date - 1).to_s(:db) %>">&laquo; <time><%= (@date - 1).to_s(:short) %></time></a></li>
                <li class="next"><a href="?date=<%= (@date + 1).to_s(:db) %>"><time><%= (@date + 1).to_s(:short) %></time> &raquo;</a></li>
            <ul>
        </nav>
    </header>
    <ol>
        <% @feats.each do |feat| %>
        <li><a class="feat<%= " completed" if feat.completed? %>" src="#" data-id="<%= feat.id %>" data-completed="<%= feat.completed %>" /><%= feat.activity.title %></a></li>
        <% end %>
    </ol>
    <p id="new"><%= link_to('Lägg till ny', new_person_feat_path(@person)) %></p>
</section>